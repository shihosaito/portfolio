
<%= render 'admin/users/admin_header' %>

<div class="container">
  <div class="row">
    <div>
      <h2>ユーザー　詳細</h2>
    </div>
    <div>
      <%= @user.name %>
      <%= @user.email %>
      <%= link_to "ユーザー情報の編集", edit_admin_user_path(@user.id), class: "btn btn-default" %>
    </div>
    <% @albums.each do |album| %>
      <div>
       <%= album.album_name %>
       <%= album.created_at %>
       <%= link_to "アルバムの中を見る", admin_album_path(album.id), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>