
<%= render 'admin/users/admin_header' %>

<div class="container">
  <div class="row">
    <div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>名前</th>
            <th>詳細ページ</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><% unless user.name == "guest" %>
              <%= link_to "詳細", admin_user_path(user.id), class: "btn btn-default" %>
              <% end %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>