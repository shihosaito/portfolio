
<%= render 'homes/header' %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 top_main_search">
      <div class="main_search_title">
        <h1>アルバムを見る</h1>
      </div>
      <div class="main_search_form">
        <%= form_for(:album, url:albums_login_path) do |f| %>
        <%= f.label :album_name, "アルバム名" %>
        <%= f.text_field :album_name, required: true %>
        <%= f.label :password_digest, "パスワード" %>
        <%= f.password_field :password_digest, required: true %>
        <%= f.submit "アルバムに入る", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>