<div class="container">
  <div class="row">
    <div>
      <p>アルバムを探す</p>
      <%= form_for(:album, url:albums_login_path) do |f| %>
      <%= f.label :album_name %>
      <%= f.text_field :album_name, required: true %>
      <%= f.label :password_digest %>
      <%= f.password_field :password_digest, required: true %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>